<%- include("partials/header.ejs"); -%>
<body>
    <div id="loader">
        <img src="images/preloader.gif" alt="">
    </div>
    <section id="content">
    <%- include("partials/navbar.ejs"); -%>
    <div class="bg-image">

    </div>
    <div class="header">
        <div class="left-part">
            <h2 class="heading-primary--sub">
                <span class="typed-text"></span><span class="cursor">&nbsp;</span>
            </h2>
        </div>

        <div class="right-part">
            <div class="content">
                <h1>Login</h1>
                <form action="/login" method="POST" autocomplete="off">

                    <div class="txt_field">
                        <input type="text" name="usn" required>
                        <label for=""><i class="fa fa-user" aria-hidden="true"></i>Registration Number</label>
                    </div>

                    <div class="txt_field">
                        <input type="password" name="pass" required>
                        <label for=""><i class="fa fa-key" aria-hidden="true"></i>password</label>
                    </div>

                    <input type="submit" value="Login">

                    <div class="signup_link">
                        New here ? <a href="registration">Sign up</a>
                    </div>

                </form>
            </div>   
        </div>     
    </div>

    <div class="iframe">
        <div class="text">
            <h1>Make a career.</h1>
            <h2>Listen to "Sundar Pichai"</h2>
        </div>
        <div class="iframe-container">
            <iframe width="800" height="450" src="https://www.youtube.com/embed/ByIGRKou6DY" 
                title="YouTube video player" frameborder="0" 
                allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen>
            </iframe>
         </div>
    </div>

    <section class="awareness">
        <div class="aware-guide">
            <div class="">
                <img class="aware-img" src="images/stronger.png" alt="">
            </div>
            <div class="aware-msg">
                <h2 class="aware-text">Get vaccinated <br> and fight against Corona Virus</h2>
            </div>
        </div>
        <div class="learn">
            <button><a href="https://www.cowin.gov.in/" style="color: #fff;">Book your slot</a></button>
            <button><a href="https://www.who.int/health-topics/coronavirus">Get the latest info</a></button>
        </div>
    </section>
    

   

  

